<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- USERS -->
    <navigation-rule>
        <from-view-id>/home.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usersBean.newUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authsBean.signIn}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/user-register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usersBean.createUser}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authsBean.user.userType.id == 1}</if>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{usersBean.createUser}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authsBean.user.userType.id == 2}</if>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{usersBean.createUser}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/user/user-register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authsBean.signIn}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/user-login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authsBean.authentication}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authsBean.user.userType.id == 1}</if>
            <to-view-id>/user-index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authsBean.authentication}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authsBean.user.userType.id == 2}</if>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authsBean.authentication}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/user/user-login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usersBean.newUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-register.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user-index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{aplicantsBean.newApplicant(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user-index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <!--<navigation-case>
            <from-action>#{userBean.indexUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user-index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.myPostulants}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user-index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>-->
    </navigation-rule>

    <!-- EVENTS -->
    <navigation-rule>
        <from-view-id>/eventIndex.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{eventsBean.newEvent}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventNew.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{eventsBean.deleteEvent(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{eventsBean.cancelEvent(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{eventsBean.editEvent(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventEdit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventEdit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventNew.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{eventsBean.createEvent}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/eventIndex.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usersBean.editUser(usersBean.authsBean.user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventNew.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usersBean.editUser(usersBean.authsBean.user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventEdit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usersBean.editUser(usersBean.user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usersBean.updateUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/eventIndex.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{aplicantsBean.applicantsByEvent(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventApplicants.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- LOGOUT -->
    <navigation-rule>
        <from-view-id></from-view-id>
        <navigation-case>
            <from-action>#{authsBean.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>